{
  "expo": {
    "name": "frontend",
    "slug": "frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "frontend",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Take progress photos for Daily Reports",
        "NSPhotoLibraryUsageDescription": "Upload progress photos for Daily Reports",
        "NSLocationWhenInUseUsageDescription": "Verify your presence at the construction site",
        "NSMicrophoneUsageDescription": "Record voice notes for Daily Progress Reports"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Take progress photos for Daily Reports"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Upload progress photos for Daily Reports"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Verify your presence at the construction site"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Record voice notes for Daily Progress Reports"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
